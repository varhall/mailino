{
	"name": "varhall/mailino",
	"type": "library",
	"description": "Varhall email service",
	"keywords": ["nette", "emails", "messages"],
	"homepage": "https://gitlab.com/varhallpub/mailino",
	"license": "MIT",
        "authors": [
		{
			"name": "Ondrej Sibrava",
			"homepage": "https://www.varhall.cz"
		}
	],
	"support": {
		"issues": "https://gitlab.com/varhallpub/mailino"
	},

	"require": {
		"php": ">=7.4",
		"latte/latte": "^v2.10",
		"nette/mail": "^v3.1",
		"nette/di": "^v3.0",
		"qferr/mjml-php": "^1.0"
	},

	"require-dev": {
		"ninjify/nunjuck": "^0.3.0",
		"mockery/mockery": "^1.4.3"
	},

	"autoload": {
		"classmap": [ "src/" ]
	},

	"autoload-dev": {
		"classmap": [ "tests/engine/" ]
	},

	"scripts": {
		"tester": [
			"nunjuck tests/cases -s -p php -c tests/php.ini"
		]
	}
}
